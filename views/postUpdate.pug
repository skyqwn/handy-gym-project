extends includes/layout

block content 
    form(action=`/post/${post._id}/update` method="post").uploadContainer.narrowContainer.box
        input(type="hidden" name="_csrf" value=csrfToken)
        h3.uploadHead 포스트 업데이트
        .uploadColumn
            .uploadColumn__item 
                span 타이틀
            .uploadColumn__item 
                input(type="text", name="title" placeholder="제목" value=post.title)
        .uploadColumn
            .uploadColumn__item 
                span 내용
            .uploadColumn__item 
                textarea(name="description")=post.description
        .uploadColumn
            .uploadColumn__item 
                span 선택
            .uploadColumn__item 
                select(name="category")
                    - let i = 0;
                    - const arr = ["자유","질문","공유","리뷰","Flex"]
                    while i < arr.length 
                        option(value=arr[i] selected=(arr[i] ===post.category ? true : undefined))=arr[i]
                        - i++;
        input(type="submit" value="업데이트")

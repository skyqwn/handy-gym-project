extends includes/layout

block content 
    form(action=`/post/${post._id}/update` method="post").narrowContainer.uploadContainer.box
        input(type="hidden" name="_csrf" value=csrfToken)
        h3.uploadHead 게시물 업데이트
        #validErrorMessage
        .uploadColumn
            .uploadColumn__item 
                span 카테고리
            .uploadColumn__item
                select(name="category")
                    - let i = 0;
                    - const arr = ["자유","질문","공유","리뷰","Flex"]
                    while i < arr.length
                        option(value=arr[i] selected=(arr[i] === post.category ? true : undefined))=arr[i]
                        - i++
        .uploadColumn
            .uploadColumn__item 
                span 제목
            .uploadColumn__item 
                input(type="text" name="title" placeholder="제목" value=post.title)
        .uploadColumn
            .uploadColumn__item 
                span 세부내용
            .uploadColumn__item 
                textarea(name="description" placeholder="세부내용")=post.description
        
       
        .submitBtnWrapper
            .submitBtn.secondary#jsSubmit 
                .emojiText
                    i.fa-solid.fa-cloud-arrow-up 
                    span 업데이트

    script(src="/static/js/validFrom.js") 


extends includes/layout
include mixins/gymCardBlock

block content 
    .container.gymContainer 
        .gymContainer__head
            a(href="/gym")
                .btn.primary 목록
            a(href="/gym/upload")
                .btn.primary 업로드
        .gymContainer__middle 
            each gym in gyms 
                +gymCardBlock({
                    _id:gym._id,
                    thumbnail:gym.photos[0],
                    name:gym.name,
                    title:gym.title,
                    isLike:gym.like_users.includes(String(user._id))
                })

    script(src="/static/js/likeFunc.js") 

include userBlock

mixin gymCardBlock(gym)
    .gymCard
        a(href=`/gym/${gym._id}` target="_blank")
            img(src=`/${gym.photos[0]}`).thumbnail
            h3.section=gym.name
            p.section=gym.location
        .gymCard__bottom.section
            .emojiContainer
                .emojiText
                    i.fa-regular.fa-eye
                    h1=gym.views
                .emojiText
                    i.fa-regular.fa-comment
                    h1=gym.comments.length
                .emojiText
                    i.fa-regular.fa-heart.like
                    h1=gym.like_users.length
        if gym.isLike
            .likeBtn.fa-solid.fa-heart.like(id=`${gym._id}`)
        else
            .likeBtn.fa-regular.fa-heart(id=`${gym._id}`)
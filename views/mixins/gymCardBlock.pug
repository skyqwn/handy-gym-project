include userBlock

mixin gymCardBlock(gym={})
    .gymCard
        a(href=`/gym/${gym._id}` target="_blank")
            img(src=`/${gym.thumbnail}`).thumbnail
            h3.section=gym.nam
            p.section=gym.location
        .gymCard__bottom.section
            +userBlock({
                _id:gym.creator._id,
                avatarUrl:gym.creator.avatarUrl,
                nickname:gym.creator.nickname
            })
            .emojiWrapper
                .emojiText
                    i.fa-regular.fa-eye
                    h1=gym.views
                .emojiText
                    i.fa-regular.fa-comment
                    h1=gym.totalComment
                .emojiText
                    i.fa-regular.fa-heart.like
                    h1=gym.totalLike
        if gym.isLike
            .likeBtn.fa-solid.fa-heart.like(id=`${gym._id}`)
        else
            .likeBtn.fa-regular.fa-heart(id=`${gym._id}`)
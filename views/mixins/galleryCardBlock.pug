include userBlock

mixin galleryCardBlock(gallery)
    .galleryCard 
        a(href=`/gallery/${gallery._id}`)
            img(src=`${gallery.photos[0].photo}`, alt=`${gallery.title}`).thumbnail
            h3=gallery.title
            +userBlock(gallery.creator)
            .emojiContainer
                .emojiText
                    i.fa-regular.fa-eye
                    h1=gallery.views
                .emojiText
                    i.fa-regular.fa-comment
                    h1=gallery.like_users.length
                .emojiText
                    i.fa-regular.fa-heart.like
                    h1=gallery.like_users.length
extends includes/layout

block content 
    .container
        form(action="/gym/upload" method="post" enctype="multipart/form-data").uploadContainer
            input(type="hidden" name="address")
            input(type="hidden" name="location")
            input(type="hidden" name="_csrf" value=csrfToken)
            h3 체육관 업로드
            .flexContainer
                .flexContainer__item 
                    span 이름
                .flexContainer__item 
                    input(type="text" name="name" placeholder="ex) 검단헬스장")
            .flexContainer
                .flexContainer__item 
                    span 타이틀
                .flexContainer__item 
                    input(type="text" name="title" placeholder="ex) 3개월 안에 몸짱")
            .flexContainer
                .flexContainer__item 
                    span 설명
                .flexContainer__item 
                    textarea(name="description" placeholder="ex) 자랑해주세요")
            .flexContainer  
                .flexContainer__item 
                    h1 주소
                .flexContainer__item 
                    #searchAddressBtn.btn.primary 주소검색
                    #kakaoMap
                    #result
            .flexContainer
                .flexContainer__item 
                    span 사진선택
                .flexContainer__item 
                    .btn.primary#fakeFileBtn
                        i.fa-solid.fa-camera
                    input(type="file" name="photos" multiple accept="image/*" hidden) 
                    #preview
            .flexContainer
                .flexContainer__item 
                    span 연중무휴
                .flexContainer__item 
                    input(type="radio" id="year1" name="yearRound" value="네")
                    label(for="year1").btn.primary 네
                    input(type="radio" id="year2" name="yearRound" value="모름")
                    label(for="year2").btn.primary 모름
                    input(type="radio" id="year3" name="yearRound" value="아니오")
                    label(for="year3").btn.primary 아니오
            .flexContainer
                .flexContainer__item 
                    span 일일이용권
                .flexContainer__item 
                    input(type="radio" id="oneday1" name="oneday" value="가능")
                    label(for="oneday1").btn.primary 가능
                    input(type="radio" id="oneday2" name="oneday" value="모름")
                    label(for="oneday2").btn.primary 모름
                    input(type="radio" id="oneday3" name="oneday" value="불가능")
                    label(for="oneday3").btn.primary 불가능
            .flexContainer#jsOnedayPay
                .flexContainer__item 
                    span 일일권 가격
                .flexContainer__item.onedayPayItem
                    input(type="text" name="onedayPay")
                    p 원
                    label
                        input(type="checkbox", id="onedayPayCheckBox")
                        div 모름
           
            input(type="submit" value="생성" class="btn primary")

    script(src="/static/js/imageCompress.js")
    script(src="/static/js/daumAddress.js")
    script(src="/static/js/createOnedayPay.js") 
    script(src="/static/js/confirmRefresh.js") 
